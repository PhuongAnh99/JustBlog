@model IList<FA.JustBlog.Core.Models.Comment>

<div class = "container p-3">
    <div class = "row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Comment List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Comment" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Comment
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                CommentHeader
            </th>
            <th>
                Post
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Email
                </td>
                <td>
                    @obj.CommentHeader
                </td>
                <td>
                    @obj.Post.Title
                </td>
                <td>
                    <div class="w-75 btn-btn-group" role="group">
                        <a asp-area="Admin" asp-controller="Comment" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-area="Admin" asp-controller="Comment" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
