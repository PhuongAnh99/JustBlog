@model IEnumerable<FA.JustBlog.Core.Models.Post>


@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <h3 class="text-info">
            <a asp-area="User" asp-controller="Post" asp-action="Details" asp-route-id="@item.Id" style="text-decoration:none">@item.Title</a>
        </h3>
        <div>
            <p>Posted @item.PostedOn with rate @item.Rate.ToString("0.0") by @item.RateCount view(s)</p>
            <p class="card-text">@item.ShortDescription</p>
        </div>
        <br />
    }
}
else
{
    <p>No author exists...</p>
}